<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="l11_Hibernate_Mapping.Employee" table="o2o-employee">
	
		<id name="id" type="int" column = "id">
			<generator class="native"></generator>
		</id>
		
		<property name="name" column = "name" type="string"></property>
	
		<property name="salary" column = "salary" type="int"></property>
		
		<one-to-one name="address" class="l11_Hibernate_Mapping.Address" constrained="true" cascade="save-update" ></one-to-one>
	
	</class>

</hibernate-mapping>